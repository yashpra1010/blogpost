<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <div class="form">
        <form action="/compose" class="form" method="post">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="blogTitle" autocomplete="off" required placeholder="Enter your blog title here"
                    class="form-control">
            </div>
            <div class="form-group">
                <label>Blog</label>
                <textarea class="form-control" id="blogBody" name="blogBody" rows="3"
                    placeholder="Write your blog here..."></textarea>
            </div>
            <div class="form-group">
                <button type="submit" name="submitBtn" class="btn btn-primary">Publish</button>
            </div>
        </form>
    </div>