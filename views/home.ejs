<%- include('partials/header'); -%>

    <h1>Hello</h1>
    <p>
        <%= hContent %>
    </p>
    <% posts.forEach(function(post){ %>
        <h2>
            <%=post.blogTitle%>
        </h2>
        <% if(post.blogBody.length>100){ %>
            <p>
                <%=post.blogBody.substring(0,100)+"..."%><a href="/posts/<%=post.blogTitle%>">Read more</a>
            </p>
            <%} else {%>
                <p>
                    <%=post.blogBody%>
                </p>

                <% }}); %>

<%- include('partials/footer'); -%>